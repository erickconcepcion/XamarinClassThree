<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClaseTres.ProfilePage"
             
             >
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Image x:Name="ImImage" VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"/>
                <Label x:Name="LabDescription"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" />
                <Label x:Name="LabDetails"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>